// Zero-copy semantics for left indexing.

// Rows only 
X = reshape(seq(0, 8, 1), 3, 3);
X[1, ] = reshape(seq(100, 102, 1), 1, 3); // original X should be modified
X[2, ] = reshape(seq(200, 202, 1), 1, 3); // original X should be *further* modified
print(X);



// Cols only 
X = reshape(seq(0, 8, 1), 3, 3);
X[, 1] = reshape(seq(100, 102, 1), 3, 1); // original X should be modified
X[, 2] = reshape(seq(200, 202, 1), 3, 1); // original X should be *further* modified
print(X);